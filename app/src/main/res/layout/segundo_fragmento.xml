<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#1A202C"
    tools:context=".SegundoFragmento">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="24dp">

            <TextView
                android:id="@+id/tv_title_what_are"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="¿Qué son las Criptomonedas?"
                android:textColor="#FFFFFF"
                android:textSize="26sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_what_are"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:text="Son monedas digitales que usan criptografía para asegurar transacciones. Al no depender de bancos o gobiernos, ofrecen un sistema financiero más seguro, transparente y accesible para todos."
                android:textColor="#E2E8F0"
                android:textSize="18sp"
                android:lineSpacingMultiplier="1.3" />

            <TextView
                android:id="@+id/tv_title_why_invest"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Principales Beneficios"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_decentralization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Descentralización"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_decentralization"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Control total sobre tu dinero sin intermediarios. Tus activos están a salvo de la censura y la manipulación."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_growth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Potencial de Crecimiento"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_growth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Es una tecnología emergente con un alto potencial de revalorización a medida que su uso se expande a nivel global."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_global"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Adopción Global"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_global"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Permiten transferencias internacionales rápidas y a bajo costo, eliminando las barreras de las finanzas tradicionales."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_risks"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Consideraciones Esenciales"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_volatility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Volatilidad Extrema"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_volatility"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="El valor de las criptomonedas puede subir o bajar drásticamente en horas. Nunca inviertas dinero que no estés dispuesto a perder por completo."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Seguridad: Eres tu Propio Banco"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_security"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Tú eres el único responsable de la seguridad de tus claves privadas (contraseñas). Si las pierdes, pierdes tu dinero para siempre. Desconfía de estafas."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_complexity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Complejidad Tecnológica"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_complexity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Cometer errores, como enviar fondos a la red incorrecta, puede resultar en la pérdida permanente e irreversible de tu dinero."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_regulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Incertidumbre Regulatoria"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_regulation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="El panorama legal y fiscal está en constante evolución y varía mucho entre países, lo que puede afectar el valor y uso de los activos."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_strategies"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:text="Estrategias Conservadoras"
                android:textColor="#FFFFFF"
                android:textSize="22sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_title_dca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Dollar-Cost Averaging (DCA)"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_dca"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Invertir una cantidad fija de dinero a intervalos regulares (ej. $50 cada lunes) sin importar el precio. Esto promedia el costo y reduce el impacto de la volatilidad."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_bluechips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Enfocarse en Proyectos Establecidos"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_bluechips"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Priorizar activos con mayor historial y capitalización de mercado, como Bitcoin (BTC) y Ethereum (ETH), en lugar de monedas nuevas y especulativas."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_hodl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● HODL (Mantener a Largo Plazo)"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_hodl"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Tener un horizonte temporal de varios años (3-5+ años) y evitar vender por pánico durante las caídas del mercado. Evita el 'trading' a corto plazo."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <TextView
                android:id="@+id/tv_title_coldwallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="● Almacenamiento Seguro"
                android:textColor="#FFFFFF"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tv_desc_coldwallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:paddingStart="18dp"
                android:text="Para montos significativos, usar una 'billetera fría' (hardware wallet). No dejes grandes sumas en las plataformas de intercambio (exchanges)."
                android:textColor="#A0AEC0"
                android:textSize="16sp"
                android:lineSpacingMultiplier="1.2"
                tools:ignore="RtlSymmetry" />

            <View
                android:layout_width="match_parent"
                android:layout_height="24dp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>